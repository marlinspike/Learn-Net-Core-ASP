
@model Movie

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                @Html.DisplayNameFor(model => model.title)
                <input asp-for="title" class="form-control" value="@Model.title" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.releaseYear)
                <input asp-for="releaseYear" class="form-control" value="@Model.releaseYear" />
                <span asp-validation-for="releaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.blurb)
                <input asp-for="blurb" class="form-control" value="@Model.blurb" />
                <span asp-validation-for="blurb" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.language)
                <input asp-for="language" class="form-control" value="@Model.language" />
                <span asp-validation-for="language" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.genre)
                <input asp-for="genre" class="form-control" value="@Model.genre" />
                <span asp-validation-for="genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

