@model Learn_Net_Core_ASP.Models.Movie

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
